{
  "version": "2",
  "templates": [
    {
      "type": 1,
      "title": "Registry",
      "description": "Docker image registry",
      "categories": ["docker"],
      "platform": "linux",
      "logo": "https://portainer-io-assets.sfo2.digitaloceanspaces.com/logos/registry.png",
      "image": "registry:latest",
      "ports": ["5000/tcp"],
      "volumes": [
        {
          "container": "/var/lib/registry"
        }
      ]
    },
    {
      "type": 1,
      "title": "MySQL",
      "description": "The most popular open-source database",
      "categories": ["database"],
      "platform": "linux",
      "logo": "https://portainer-io-assets.sfo2.digitaloceanspaces.com/logos/mysql.png",
      "image": "mysql/mysql-server:5.7",
      "env": [
        {
          "name": "MYSQL_ROOT_PASSWORD",
          "label": "Root password"
        },
        {
          "name": "MYSQL_ROOT_HOST",
          "default": "%",
          "preset": true
        }
      ],
      "ports": ["3306/tcp"],
      "volumes": [
        {
          "container": "/var/lib/mysql"
        }
      ]
    },
    {
      "type": 3,
      "title": "MariaDB",
      "description": "MariaDB v10.6+ Container with default settings",
      "categories": ["database"],
      "platform": "linux", 
      "logo": "https://mariadb.com/wp-content/uploads/2019/11/mariadb-logo-vert_blue-transparent-300x245.png",
      "notes": "Valid MariaDB image versions are listed on the [Docker hub](https://hub.docker.com/_/mariadb)"
      "env": [
        {
          "name": "MYSQL_VERSION",
          "label": "MariaDB version",
          "default": "latest",
          "description": "Version (see list of valid image versions on the <a href='https://hub.docker.com/_/mariadb'>MariaDB Docker Hub</a>)"
          "required": true
        },
        {
          "name": "MYSQL_ROOT_PASSWORD",
          "label": "Root password",
          "required": true
        },
        {
          "name": "MYSQL_DATABASE",
          "label": "Database name",
          "default": "db"
        },
        {
          "name": "MYSQL_USER",
          "label": "User name",
          "default": "admin"
        },
        {
          "name": "MYSQL_PASSWORD",
          "label": "User password"
        },
        {
          "name": "MYSQL_PORT",
          "label": "Port",
          "description": "Port to use for the database instance (check that it is not in use)"
          "default": "3306"
        },
        {
          "name": "MYSQL_ROOT_HOST",
          "default": "%",
          "preset": true
        }
      ],
      "repository": {
        "url": "https://github.com/Mugane/Portainer",
        "stackfile": "mariadb/docker-compose.yml"
      }
    }    
  ]
}
